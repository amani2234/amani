    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getFirestore, collection, addDoc, getDocs, query, orderBy } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

        // إعدادات مشروعك amani-99d33
        const firebaseConfig = {
            apiKey: "AIzaSyCyaw9hgBQYUaNcNOqwGXJNCLMEl98TqmE",
            authDomain: "amani-99d33.firebaseapp.com",
            projectId: "amani-99d33",
            storageBucket: "amani-99d33.firebasestorage.app",
            messagingSenderId: "517243262530",
            appId: "1:517243262530:web:595445d12a89587ed9ffdb"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const SITE_PASSWORD = "amani2005#";

        // عناصر DOM
        const overlay = document.getElementById('overlay');
        const authModal = document.getElementById('authModal');
        const addModal = document.getElementById('addModal');
        const closeAuthBtn = document.getElementById('closeAuthBtn');
        const closeAddBtn = document.getElementById('closeAddBtn');

        // --- دالة لمنع الزوم بشكل كامل ---
        function disableZoom() {
            // منع التكبير بالضغط المزدوج
            let lastTouchEnd = 0;
            document.addEventListener('touchend', function(event) {
                const now = (new Date()).getTime();
                if (now - lastTouchEnd <= 300) {
                    event.preventDefault();
                }
                lastTouchEnd = now;
            }, false);

            // منع التكبير بالاختيار
            document.addEventListener('gesturestart', function(e) {
                e.preventDefault();
            });

            // منع التكبير بمفاتيح Ctrl + + أو Ctrl + -
            document.addEventListener('keydown', function(e) {
                if ((e.ctrlKey === true || e.metaKey === true) && 
                    (e.keyCode === 61 || e.keyCode === 107 || e.keyCode === 173 || 
                     e.keyCode === 109 || e.keyCode === 187 || e.keyCode === 189)) {
                    e.preventDefault();
                }
            });

            // منع التكبير بعجلة الماوس مع Ctrl
            document.addEventListener('wheel', function(e) {
                if (e.ctrlKey) {
                    e.preventDefault();
                }
            }, { passive: false });

            // منع التكبير في المتصفحات المختلفة
            document.addEventListener('gesturechange', function(e) {
                e.preventDefault();
            });
            document.addEventListener('gestureend', function(e) {
                e.preventDefault();
            });
        }

        // --- وظائف إدارة النوافذ ---
        function showModal(modal) {
            overlay.style.display = 'block';
            modal.style.display = 'block';
        }

        function hideAllModals() {
            overlay.style.display = 'none';
            authModal.style.display = 'none';
            addModal.style.display = 'none';
        }

        document.getElementById('openAuthBtn').onclick = () => showModal(authModal);
        
        document.getElementById('checkPassBtn').onclick = () => {
            const pass = document.getElementById('adminPass').value;
            if(pass === SITE_PASSWORD) {
                hideAllModals();
                showModal(addModal);
                document.getElementById('adminPass').value = "";
            } else {
                alert('الكود غير صحيح! أنت لست المالك.');
            }
        };

        overlay.onclick = hideAllModals;
        closeAuthBtn.onclick = hideAllModals;
        closeAddBtn.onclick = hideAllModals;

        // --- وظائف رفع الملفات إلى Catbox ---
        async function uploadToCatbox(file) {
            const formData = new FormData();
            formData.append('reqtype', 'fileupload');
            formData.append('fileToUpload', file);

            try {
                const response = await fetch('https://corsproxy.io/?' + encodeURIComponent('https://catbox.moe/user/api.php'), {
                    method: 'POST',
                    body: formData
                });
                return await response.text();
            } catch (error) {
                console.error("خطأ في رفع الملف:", error);
                throw new Error("فشل في رفع الملف إلى السحابة");
            }
        }

        // تحويل الصورة إلى base64
        const toBase64 = file => new Promise((resolve, reject) => {
            const reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = () => resolve(reader.result);
            reader.onerror = e => reject(e);
        });

        // --- وظيفة جلب وعرض الكتب ---
        async function loadBooks() {
            try {
                const q = query(collection(db, "books"), orderBy("createdAt", "desc"));
                const snap = await getDocs(q);
                
                // تفريغ الأرفف الحالية
                document.querySelectorAll('.shelf').forEach(s => s.innerHTML = '');
                
                // عرض الكتب
                snap.forEach(doc => {
                    const book = doc.data();
                    createBookElement(book);
                });
                
                // إذا لم تكن هناك كتب، عرض رسالة
                if (snap.empty) {
                    document.querySelectorAll('.shelf').forEach(shelf => {
                        shelf.innerHTML = `
                            <div style="width: 100%; display: flex; justify-content: center; align-items: center; color: white; font-size: 18px;">
                                <i class="fas fa-book-open" style="margin-left: 10px;"></i>
                                لا توجد كتب في هذا الرف بعد
                            </div>
                        `;
                    });
                }
            } catch (error) {
                console.error("خطأ في جلب الكتب:", error);
            }
        }

        // إنشاء عنصر كتاب ثلاثي الأبعاد
        function createBookElement(book) {
            const bookEl = document.createElement('div');
            bookEl.className = 'book-3d';
            
            // استخدام غلاف افتراضي إذا لم يكن هناك غلاف
            const coverUrl = book.cover || 'https://images.unsplash.com/photo-1541963463532-d68292c34b19?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80';
            
            // إنشاء عنوان مختصر للظهر
            const shortTitle = book.title.length > 15 ? book.title.substring(0, 15) + "..." : book.title;
            
            bookEl.innerHTML = `
                <div class="book-spine" data-title="${shortTitle}"></div>
                <div class="book-cover" style="background-image:url('${coverUrl}')">
                    <div class="book-title">${book.title}</div>
                </div>
                <div class="book-top"></div>
                <div class="book-shadow"></div>
            `;
            
            // فتح PDF عند النقر
            bookEl.onclick = () => {
                if (book.pdfUrl) {
                    window.open(book.pdfUrl, '_blank');
                } else {
                    alert("رابط الكتاب غير متوفر");
                }
            };
            
            // إضافة الكتاب إلى الرف المناسب
            const targetShelf = document.getElementById(book.shelf);
            if (targetShelf) {
                targetShelf.appendChild(bookEl);
            } else {
                // إذا لم يكن الرف موجودًا، نضيفه إلى الرف الأول
                document.getElementById('shelf1').appendChild(bookEl);
            }
        }

        // --- معالجة إرسال النموذج ---
        document.getElementById('uploadForm').onsubmit = async (e) => {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const status = document.getElementById('status');
            
            // التحقق من صحة النموذج
            const title = document.getElementById('title').value.trim();
            const pdfFile = document.getElementById('pdfFile').files[0];
            
            if (!title) {
                alert("الرجاء إدخال اسم الكتاب");
                return;
            }
            
            if (!pdfFile) {
                alert("الرجاء اختيار ملف PDF");
                return;
            }
            
            // تغيير حالة الزر وعرض رسالة التحميل
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري الرفع...';
            status.textContent = "جاري رفع الكتاب (PDF) إلى السحابة... يرجى الانتظار";
            status.style.color = "var(--secondary-color)";
            
            try {
                // رفع ملف PDF إلى Catbox
                const directPdfUrl = await uploadToCatbox(pdfFile);
                
                // معالجة غلاف الكتاب
                let coverData = "";
                const coverFile = document.getElementById('coverImg').files[0];
                if (coverFile) {
                    coverData = await toBase64(coverFile);
                }
                
                // حفظ بيانات الكتاب في Firebase
                await addDoc(collection(db, "books"), {
                    title: title,
                    shelf: document.getElementById('shelf').value,
                    pdfUrl: directPdfUrl,
                    cover: coverData,
                    createdAt: new Date()
                });
                
                // إظهار رسالة النجاح
                status.textContent = "تم نشر الكتاب بنجاح! سيتم تحديث المكتبة خلال ثوانٍ...";
                status.style.color = "green";
                
                // إعادة تعيين النموذج
                document.getElementById('uploadForm').reset();
                
                // تحديث عرض المكتبة وإغلاق النافذة
                setTimeout(() => {
                    hideAllModals();
                    loadBooks();
                }, 2000);
                
            } catch (err) {
                console.error("خطأ في عملية النشر:", err);
                status.textContent = "حدث خطأ أثناء النشر: " + err.message;
                status.style.color = "red";
                alert("حدث خطأ أثناء عملية النشر. الرجاء المحاولة مرة أخرى.");
            } finally {
                // إعادة تعيين حالة الزر
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'بدء الرفع والنشر';
            }
        };

        // تحميل الكتب عند فتح الصفحة
        window.onload = () => {
            loadBooks();
            disableZoom(); // تفعيل منع الزوم بدون أي رسائل
        };
    </script>
</body>
</html>
